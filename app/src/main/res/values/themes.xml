<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cogito" parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_2</item>
        <item name="colorPrimaryVariant">@color/blue_3</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_3</item>
        <item name="colorSecondaryVariant">@color/blue_4</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/readex_pro_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="addElevationShadow">true</item>
    </style>

    <style name="App.Custom.BottomNavigationView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_3</item>
    </style>

    <style name="CogitoButton.Primary" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/readex_pro_medium</item>
        <item name="android:background">@drawable/blue_rounded_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="android:topLeftRadius">10dp</item>
    </style>

    <style name="CogitoButton.Secondary" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/blue_1</item>
        <item name="iconTint">@color/blue_1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/readex_pro_medium</item>
        <item name="android:background">@drawable/blue_rounded_rectangle</item>
        <item name="backgroundTint">@color/blue_4</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="android:topLeftRadius">10dp</item>
    </style>
</resources>